<Window x:Class="FabricStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FabricStore"
        mc:Ignorable="d"
        Title="Менеджер: учёт материалов" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button x:Name="btnMaterialShow"
                    Click="btnMaterialShow_Click"
                    Style="{StaticResource standartButton}"
                    Content="Materials"/>
            <Button x:Name="btnDeliveredShow"
                    Click="btnDeliveredShow_Click"
                    Style="{StaticResource standartButton}"
                    Content="Delivered"/>
            <Button x:Name="btnSoldShow"
                    Click="btnSoldShow_Click"
                    Style="{StaticResource standartButton}"
                    Content="Sold" Width="Auto"/>
        </StackPanel>
        <Frame x:Name="currentFrame" Grid.Row="0"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>